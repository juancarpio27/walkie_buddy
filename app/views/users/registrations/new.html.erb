<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse">
    <a class="navbar-brand" href="/">
      <%= image_tag('Logo.png', height: "30") %>
    </a>
  </div>
</nav>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="card mt-4">
      <h5 class="card-header">
        Registro de usuario
      </h5>
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.text_field :name, {class: 'form-control', placeholder: "Nombre"} %>
            </div>

            <div class="form-group">
              <%= f.text_field :lastname, {class: 'form-control', placeholder: "Apellido"} %>
            </div>

            <div class="form-group">
              <%= f.text_field :phone, {class: 'form-control', placeholder: "Teléfono"} %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, {class: 'form-control', placeholder: "Correo electrónico"} %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, {class: 'form-control', placeholder: "Contraseña", autocomplete: "off"} %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, {class: 'form-control', placeholder: "Confirmar contraseña", autocomplete: "off"}  %>
            </div>

            <div class="form-group">
              <%= f.file_field :avatar %>
            </div>

            <div class="actions">
              <%= f.submit "Registrar", class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Iniciar sesión", new_user_session_path %>
  </div>
</div>





