<%= render 'menu/navbar' %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="card mt-4 pt-4 pl-4 pb-4 pr-4">

      <%= form_for @user, html: { multipart: true } do  |f| %>

          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.text_field :name, {class: 'form-control', placeholder: "Nombre"} %>
          </div>

          <div class="form-group">
            <%= f.text_field :lastname, {class: 'form-control', placeholder: "Nombre"} %>
          </div>

          <div class="form-group">
            <%= f.text_field :phone, {class: 'form-control', placeholder: "Nombre"} %>
          </div>

          <div class="form-group">
            <%= f.file_field :avatar %>
          </div>

          <div class="actions">
            <%= f.submit 'Guardar' , class: "btn btn-primary" %>
          </div>

      <% end %>
    </div>
    <%= link_to '<< Regresar', authenticated_root_path %>
  </div>
</div>

