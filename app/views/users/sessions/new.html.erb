<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse">
    <a class="navbar-brand" href="/">
      <%= image_tag('Logo.png', height: "30") %>
    </a>
  </div>
</nav>


<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="card  mt-4">
      <h5 class="card-header">
        Iniciar sesión
      </h5>
      <div class="card-body  pt-4 pr-4 pb-4 pl-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label "Correo electrónico" %><br />
              <%= f.email_field :email, {class: 'form-control', placeholder: "Correo electrónico"} %>
            </div>

            <div class="form-group">
              <%= f.label "Contraseña" %><br />
              <%= f.password_field :password, {class: 'form-control', placeholder: "Contraseña", autocomplete: "off"} %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Iniciar sesión", class: "btn btn-primary"  %>
            </div>
        <% end %>

      </div>

    </div>
    <%= render "users/shared/links" %>
  </div>
</div>




